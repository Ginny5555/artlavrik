<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta property="og:title" content="{{ogTitle}}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content />
    <meta property="og:image" content="{{ogImage}}" />
    <meta property="og:image:width" content="300"/>
    <meta property="og:image:height" content="300"/>
    <meta property="og:description" content="{{ogDescription}}" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{title}}</title>
</head>
<body>

    {{>header.hbs}}

    <main>

        {{{innerHTML}}}

    </main>

    {{>footer.hbs}}

    <script type="application/javascript">
        const imageUrl = document.querySelector("[property='og:image']").getAttribute("content")
        document.querySelector("[property='og:url']").setAttribute("content", location.href);
        document.querySelector("[property='og:image']").setAttribute("content", `${location.origin}${imageUrl}`);
    </script>
</body>
</html>